        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group hidden">
              {#{ form_label(form.email) }#}
              {{ form_widget(form.email,{'attr':{'class':'form-control', 'placeholder':'Email'}}) }}
              {{ form_errors(form.email) }}
              <i class="fa fa-envelope"></i>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group hidden">
              {#{ form_label(form.telephone) }#}
              {{ form_widget(form.telephone,{'attr':{'class':'form-control', 'placeholder':'Telephone'}}) }}
              {{ form_errors(form.telephone) }}
              <i class="fa fa-phone"></i>
            </div>
          </div>
        </div>

        <button id="buttonReservation" type="button" class="btn btn-default btn-lg" onclick="clickReservation">
          Reservation
        </button>

        <button id="buttonSoumettre" type="submit" class="btn btn-default btn-lg hidden">Soumettre <i class="fa fa-arrow-right"></i></button>


        {{ form_end(form) }}


      </div>
